        TTBR1_EL1: 0,

        AddressSpace: { },

        Tests:
        [
            {
                GCPtr: 0x0,
                Flags: { READ: 1, USER: 1 },
                Result: { rcQueryPageFast: 0, rcGetPage: 0, GCPhys: 0x0, Info: { Succeeded: 1 }, Failed: 0, Effective: { PR: 1, PW: 1, PX: 1, PGCS: 1, UR: 1, UW: 1, UX: 1, UGCS: 1} }
            },
            {
                GCPtr: 0xffff,
                Flags: { READ: 1, USER: 1 },
                Result: { rcQueryPageFast: 0, rcGetPage: 0, GCPhys: 0xffff, Info: { Succeeded: 1 }, Failed: 0, Effective: { PR: 1, PW: 1, PX: 1, PGCS: 1, UR: 1, UW: 1, UX: 1, UGCS: 1} }
            },
        ]
    },
    {
        Name:      "4K Granules",
        SCTLR_EL1: 0x1,
        TCR_EL1:   { IPS: '64G', TG0: '4K', TG1: '4K' },
        TTBR0_EL1: 0x0,
        TTBR1_EL1: 0x1000,

