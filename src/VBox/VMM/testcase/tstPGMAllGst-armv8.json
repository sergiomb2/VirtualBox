                Flags: { EXECUTE: 1, USER: 1 },
                Result: { rcQueryPageFast: 0, rcGetPage: 0, GCPhys: 0x0000c00000000000, Info: { Succeeded: 1, GiganticPage: 1}, Failed: 0, Effective: { PR: 1, PX: 1, UR: 1, UX: 1} },
